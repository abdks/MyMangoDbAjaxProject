@model List<MyMangoDbAjaxProject.Dal.Entities.Experince>

@{
    int count = 0;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MongoLayout.cshtml";
}


<br />
<br />
<br />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Sıra</th>
            <th>#</th>
            <th>Başlık</th>
            <th>Tarih</th>
            <th>Yer</th>


            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.ExperinceID</td>
                <td>@item.Title</td>
                <td>@item.Date</td>
                <td>@item.Place</td>
                <td><a href="/Experince/DeleteExperince/@item.ExperinceID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Experince/UpdateExperince/@item.ExperinceID" class="btn btn-danger">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Experince/CreateExperince" class="btn btn-primary">Yeni Deneyim Girişi</a>
</div>