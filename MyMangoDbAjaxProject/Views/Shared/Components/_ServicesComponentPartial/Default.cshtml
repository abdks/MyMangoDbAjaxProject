@model List<MyMangoDbAjaxProject.Dal.Entities.Services>

@{
    Layout = null;
}

<div class="container-fluid bg-light my-5 py-6" id="service">
    <div class="container">
        <div class="row g-5 mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="col-lg-6">
                <h1 class="display-5 mb-0">Hizmetlerim</h1>
            </div>
            <div class="col-lg-6 text-lg-end">
                <a class="btn btn-primary py-3 px-5" href="">Hire Me</a>
            </div>
        </div>

        @for (int i = 0; i < Model.Count; i += 3)
        {
            <div class="row g-4">
                @for (int j = i; j < i + 3 && j < Model.Count; j++)
                {
                    <div class="col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="service-item d-flex flex-column flex-sm-row bg-white rounded h-100 p-4 p-lg-5">
                            <div class="bg-icon flex-shrink-0 mb-3">
                                <i class="fa fa-crop-alt fa-2x text-dark"></i>
                            </div>
                            <div class="ms-sm-4">
                                <h4 class="mb-3">@Model[j].Title</h4>
                                <span>@Model[j].Description</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
