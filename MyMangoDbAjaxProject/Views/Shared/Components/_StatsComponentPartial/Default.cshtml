@using static MyMangoDbAjaxProject.ViewComponents.UILayout._StatsComponentPartial;
@model StatsEducationExperienceViewModel

@{
    Layout = null;
}
<div class="container-xxl py-6 pb-5" id="skill">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="display-5 mb-5">Deneyim</h1>
                <p class="mb-4">Deneyimlerimin daha başlangıcında olduğumu düşünüyorum.Buraların ilerleyen zamanlarda dolacağımdan hiç şüphem yok.</p>
                <h3 class="mb-4">My Skills</h3>
                <div class="row align-items-center">
                    <div class="col-md-6">
                        @*buraya istatistikler listelenecek*@
                        @foreach (var item in Model.Stats)
                        {
                            <div class="skill mb-4">
                                <div class="d-flex justify-content-between">
                                    <h6 class="font-weight-bold">@item.title</h6>
                                    <h6 class="font-weight-bold">@item.Amount</h6>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="@item.Amount" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                      
                        
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <ul class="nav nav-pills rounded border border-2 border-primary mb-5">
                    <li class="nav-item w-50">
                        <button class="nav-link w-100 py-3 fs-5 active" data-bs-toggle="pill" href="#tab-1">Experience</button>
                    </li>
                    <li class="nav-item w-50">
                        <button class="nav-link w-100 py-3 fs-5" data-bs-toggle="pill" href="#tab-2">Education</button>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        <div class="row gy-5 gx-4">
                             @foreach (var item in Model.Experince)
                            {
                                <div class="col-sm-6">
                                    <h5>@item.Title</h5>
                                    <hr class="text-primary my-2">
                                    <p class="text-primary mb-1">@item.Date</p>
                                    <h6 class="mb-0">@item.Place</h6>
                                </div>
                            }
                           
                          
                        </div>
                    </div>
                    <div id="tab-2" class="tab-pane fade show p-0">
                        <div class="row gy-5 gx-4">
                            @foreach (var item in Model.Education)
                            {
                                <div class="col-sm-6">
                                    <h5>@item.Title</h5>
                                    <hr class="text-primary my-2">
                                    <p class="text-primary mb-1">@item.Date</p>
                                    <h6 class="mb-0">@item.Place</h6>
                                </div>
                            }
                           
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
